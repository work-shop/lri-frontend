{
    "apps": [{
            "name": "lri.workshopdesignstudio.org",
            "script": "./index.js",
            "watch": true,
            "ignore_watch": [
                "node_modules",
                "static",
                "templates",
                "logs"
            ],
            "env": {
                "NODE_ENV": "development",
